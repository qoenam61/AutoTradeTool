<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_login">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_access_key"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_login"
                android:gravity="center"
                android:text="Access Key"/>
            <EditText
                android:id="@+id/edit_access_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/edit_view_font_size"
                android:hint="Enter to Access Key"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_secret_key"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_login"
                android:gravity="center"
                android:text="Secret Key"/>
            <EditText
                android:id="@+id/edit_secret_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/edit_view_font_size"
                android:hint="Enter to Secret Key"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Log In"/>

    <LinearLayout
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_login"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="null"
            android:textSize="@dimen/edit_view_font_size"/>
        <TextView
            android:id="@+id/text_result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="null"
            android:textSize="@dimen/edit_view_font_size"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_result"
        android:text="Reslut"/>
</RelativeLayout>