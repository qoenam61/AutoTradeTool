<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coin_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/evaluation_coin_list_height"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="한글명"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="이더리움"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="현재가"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_current_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="분당상승률"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_variant_rate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="틱거래량"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_tick_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="분당거래금액"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>