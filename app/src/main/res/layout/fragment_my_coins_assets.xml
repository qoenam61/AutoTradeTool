<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/asset_total"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_view_login_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="총 보유자산"
            android:textSize="@dimen/default_text_size"/>
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/asset_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="@dimen/default_text_size"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assets_current"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_view_login_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/asset_total">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="현재 보유자산"
            android:textSize="@dimen/default_text_size"/>
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/assets_current_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="@dimen/default_text_size"
            android:inputType="numberDecimal"/>
    </LinearLayout>
</RelativeLayout>