<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coin_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/evaluation_coin_list_height"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:text="한글명"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="비트코인"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/coin_list_text_size"
                android:text="현재가"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_current_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:text="매수가"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/coin_change_rate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:text="수익률"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/buying_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/coin_list_item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:text="매수금액\n(백만)"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/coin_list_item_margin"/>
            <TextView
                android:id="@+id/buying_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/coin_list_text_size"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>